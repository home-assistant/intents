#!/usr/bin/env bash

# Stop on errors
set -e

cd "$(dirname "$0")/.."

rm -rf dist
cp -r public dist

cd ..
python3 -m script.intentfest website_summary > website/src-11ty/_data/intentSummary.json
cd website
cp src-11ty/_data/intentSummary.json dist/intentSummary.json

NODE_ENV=production npm exec -- eleventy
